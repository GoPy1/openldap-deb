#!/bin/bash

BASEDIR=$(dirname $0)
source $BASEDIR/openldap-ltb.vars


export CC="gcc"
export CFLAGS="-DOPENLDAP_FD_SETSIZE=4096 -O2 -g"
export CPPFLAGS="-I${BDBDIR}/include -I/usr/kerberos/include"
export LDFLAGS="-L${BDBDIR}/lib"
./configure --disable-dependency-tracking --prefix=${LDAPDIR} --libdir=${LDAPDIR}/${_LIB} --enable-hdb --enable-bdb --enable-overlays --enable-modules --enable-dynamic=no --with-tls=openssl --enable-debug --with-cyrus-sasl --enable-spasswd --enable-ppolicy --enable-crypt --enable-ldap -enable-slapi --enable-meta --enable-sock

